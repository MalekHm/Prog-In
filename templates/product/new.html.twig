{% extends 'baseBack.html.twig' %}

{% block title %}New Product{% endblock %}

{% block body %}

   {{ form_start(form) }}
<div class="card">
    <div class="card-body">
        <div class="card-title">Cr√©er un nouveau produit</div>
        <hr>

        <div class="form-group">
            <label for="input-6">Nom de produit</label>
            {{ form_widget(form.name ,{'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label for="input-7">Description</label>
            {{ form_widget(form.description ,{'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label for="input-8">Prix vente</label>
            {{ form_widget(form.price ,{'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label for="input-6">Prix location</label>
            {{ form_widget(form.pricer ,{'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label for="input-6">Quantite</label>
            {{ form_widget(form.quantity ,{'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label for="input-9">Categorie</label>
            {{ form_widget(form.Category ,{'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label for="input-9">Images</label>
            {{ form_widget(form.images ,{'attr': {'class': 'form-control'}}) }}
        </div>
            <div class="form-group">
                <button type="submit" class="btn btn-light btn-round px-5">
                    <i class="icon-lock">
                    </i> {{ button_label|default('Enregistrer') }}
                </button>
            </div>

        </div>
    </div>

    {{ form_end(form) }}

     <a href="{{ path('product_index') }}">
         <button type="button" class="btn btn-light"> Retourner a la liste </button>
     </a>


{% endblock %}
